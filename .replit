modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "libyaml", "openjpeg", "tcl", "tesseract", "tk", "zbar", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "KYC API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AWS Simulator"

[[workflows.workflow]]
name = "KYC API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m kyc_platform.api_handler.main"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "AWS Simulator"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python simulacion-de-aws/worker_simulator.py"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80
